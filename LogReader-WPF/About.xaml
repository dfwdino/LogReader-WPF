<Window x:Class="LogReader_WPF.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogReader_WPF"
        mc:Ignorable="d"
        Title="About" Height="194" Width="353" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Github:" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Version:" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top"/>

        <TextBlock Name="ProjectURL" HorizontalAlignment="Left" Margin="66,44,0,0" TextWrapping="Wrap" Text="https://github.com/dfwdino/LogReader-WPF" VerticalAlignment="Top" 
                   MouseDown="ProjectURL_MouseDown"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" x:Name="VersionNumber"/>

        <Button Content="Close" HorizontalAlignment="Left" Margin="16,111,0,0" VerticalAlignment="Top" Click="Close_Clicked"/>
        <Label Content="DFWDino Log Reader" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="133"/>

    </Grid>
</Window>
